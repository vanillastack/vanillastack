apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: rook-ceph-mgr
  namespace: {{rook.namespace}}
  labels:
    release: prometheus-operator
spec:
  namespaceSelector:
    matchNames:
      - {{rook.namespace}}
  selector:
    matchLabels:
      app: rook-ceph-mgr
      rook_cluster: rook-ceph
  endpoints:
  - port: http-metrics
    path: /metrics
    interval: 10s
