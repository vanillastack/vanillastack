apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{rook.toolbox.name}}
  namespace: {{rook.namespace}}
  labels:
    app: {{rook.toolbox.name}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{rook.toolbox.name}}
  template:
    metadata:
      labels:
        app: {{rook.toolbox.name}}
    spec:
      dnsPolicy: ClusterFirstWithHostNet
      containers:
      - name: rook-ceph-tools
{% if commercial.enabled %}
        image: {{repositories.registry_commercial}}/vanillastack/ceph:v1.4.4
{% else %}
        image: rook/ceph:v1.4.4
{% endif %}
        command: ["/tini"]
        args: ["-g", "--", "/usr/local/bin/toolbox.sh"]
        imagePullPolicy: IfNotPresent
        env:
          - name: ROOK_CEPH_USERNAME
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-username
          - name: ROOK_CEPH_SECRET
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-secret
        volumeMounts:
          - mountPath: /etc/ceph
            name: ceph-config
          - name: mon-endpoint-volume
            mountPath: /etc/rook
      volumes:
        - name: mon-endpoint-volume
          configMap:
            name: rook-ceph-mon-endpoints
            items:
            - key: data
              path: mon-endpoints
        - name: ceph-config
          emptyDir: {}
      tolerations:
        - key: "node.kubernetes.io/unreachable"
          operator: "Exists"
          effect: "NoExecute"
          tolerationSeconds: 5
