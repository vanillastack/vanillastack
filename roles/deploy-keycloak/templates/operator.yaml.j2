piVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak-operator
  namespace: {{keycloak.namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      name: keycloak-operator
  template:
    metadata:
      labels:
        name: keycloak-operator
    spec:
      serviceAccountName: keycloak-operator
      containers:
        - name: keycloak-operator
          # Replace this with the built image name
{% if commercial.enabled %}
          image: {{repositories.registry_commercial}}/vanillastack/keycloak-operator:12.0.2
{% else %}
          image: quay.io/keycloak/keycloak-operator:12.0.2
{% endif %}
          command:
          - keycloak-operator
          imagePullPolicy: Always
          env:
            - name: WATCH_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: OPERATOR_NAME
              value: "keycloak-operator"
{% if commercial.enabled %}
            - name: RELATED_IMAGE_KEYCLOAK
              value: "{{repositories.registry_commercial}}/vanillastack/keycloak:12.0.2"
#            - name: RELATED_IMAGE_RHSSO_OPENJ9
#              value: "{{repositories.registry_commercial}}/vanillastack/sso74-openshift-rhel8:7.4-1"
#            - name: RELATED_IMAGE_RHSSO_OPENJDK
#              value: "{{repositories.registry_commercial}}/vanillastack/sso74-openshift-rhel8:7.4-1"
            - name: RELATED_IMAGE_KEYCLOAK_INIT_CONTAINER
              value: "{{repositories.registry_commercial}}/vanillastack/keycloak-init-container:12.0.2"
            - name: RELATED_IMAGE_RHMI_BACKUP_CONTAINER
              value: "{{repositories.registry_commercial}}/vanillastack/backup-container:1.0.10"
            - name: RELATED_IMAGE_POSTGRESQL
              value: "{{repositories.registry_commercial}}/vanillastack/postgresql-10-rhel7:1"
{% else %}
            - name: RELATED_IMAGE_KEYCLOAK
              value: "quay.io/keycloak/keycloak:12.0.2"
#            - name: RELATED_IMAGE_RHSSO_OPENJ9
#              value: "registry.redhat.io/rh-sso-7/sso74-openshift-rhel8:7.4-1"
#            - name: RELATED_IMAGE_RHSSO_OPENJDK
#              value: "registry.redhat.io/rh-sso-7/sso74-openshift-rhel8:7.4-1"
            - name: RELATED_IMAGE_KEYCLOAK_INIT_CONTAINER
              value: "quay.io/keycloak/keycloak-init-container:12.0.2"
            - name: RELATED_IMAGE_RHMI_BACKUP_CONTAINER
              value: "quay.io/integreatly/backup-container:1.0.10"
            - name: RELATED_IMAGE_POSTGRESQL
              value: "registry.access.redhat.com/rhscl/postgresql-10-rhel7:1"
{% endif %}
