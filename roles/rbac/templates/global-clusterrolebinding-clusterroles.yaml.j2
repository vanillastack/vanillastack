---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: "mpaas-customer-binding-users-{{ item }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: "{{ item }}"
subjects:
{% for user in rbac.users %}
- kind: User
  name: "{{ user }}"
  apiGroup: ""
{% endfor %}
